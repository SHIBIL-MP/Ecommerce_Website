              <td></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td>
                <h5>Subtotal</h5>
              </td>
              <td>
                <h5>Rs. <span id="total"><%=totalSum%></span></h5>
              </td>
            </tr>
            <% } %>
            
