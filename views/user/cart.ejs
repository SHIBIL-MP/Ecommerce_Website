                <button
                  class="btn btn-danger btn-sm rounded-0"
                  type="button"
                  data-toggle="tooltip"
                  data-placement="top"
                  title="Remover"
                  onclick="productRemove('<%=product._id%>','<%=product.product._id%>',-1)"
                >
                  <i class="fa fa-trash"></i>
                </button>
              </td>
            </tr>
            

