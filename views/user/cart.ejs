                <th scope="col">Total</th>
              </tr>
            </thead>
            <tbody>
              <% for(let product of cartProducts) { %>
              <tr>
                <td>
                  <div class="media">
                    <div class="d-flex">
                      <img src="<%=product.product.images[0].url%>" alt="" />
                    </div>
                    <div class="media-body">
